{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/app.py"
    },
    {
      "source": "/(.*)",
      "destination": "/app"
    }
  ],
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "bot/discordBot.js",
      "use": "@vercel/node"
    }
  ],
  "crons": [
    {"path": "/api/cron", "schedule": "0 6 * * *"},
    {"path": "/api/cron", "schedule": "0 8 * * *"},
    {"path": "/api/cron", "schedule": "0 10 * * *"},
    {"path": "/api/cron", "schedule": "0 12 * * *"},
    {"path": "/api/cron", "schedule": "0 15 * * *"},
    {"path": "/api/cron", "schedule": "0 18 * * *"},
    {"path": "/api/cron", "schedule": "0 21 * * *"}
  ]
}