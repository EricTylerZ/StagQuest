{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "app/**",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/api/mint", "dest": "/app.py" },
    { "src": "/api/novena", "dest": "/app.py" },
    { "src": "/api/status", "dest": "/app.py" },
    { "src": "/(.*)", "dest": "/app/page.tsx" }
  ]
}